<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="androidx.lifecycle.LiveData"/>
        <variable
            name="details"
            type="LiveData&lt;com.example.moviedb.model.tvDetails.TvDetailsResponse>" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/tv_details_appbarr"
            android:layout_width="match_parent"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:layout_height="250dp">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:contentScrim="?attr/colorPrimary"
                app:title="@{details.name}"
                app:expandedTitleGravity="bottom"
                app:layout_scrollFlags="scroll|exitUntilCollapsed|snap">

                <ImageView
                    android:id="@+id/tv_details_poster"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    app:layout_collapseMode="parallax"
                    app:loadImg="@{details.posterPath}"
                    app:layout_collapseParallaxMultiplier="0.5"/>

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/tv_details_toolBar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    app:layout_collapseMode="pin"/>
            </com.google.android.material.appbar.CollapsingToolbarLayout>
        </com.google.android.material.appbar.AppBarLayout>
        <androidx.core.widget.NestedScrollView
            android:id="@+id/tv_details_scrolling"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_details_realise_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="May, 29, 2019"
                    android:layout_marginLeft="@dimen/sides_margin"
                    android:layout_marginRight="@dimen/sides_margin"
                    android:text="@{details.firstAirDate}"
                    android:layout_marginTop="@dimen/detal_text_margin"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"/>
                <TextView
                    android:id="@+id/tv_details_genre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/detal_text_margin"
                    tools:text="Action &amp; Adventure, Drama, Sci-Fi &amp; Fantasy"
                    android:textColor="@color/textHintColor"
                    android:layout_marginLeft="@dimen/sides_margin"
                    app:genresList="@{details.genres}"
                    android:layout_marginRight="@dimen/sides_margin"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/detal_text_margin"
                    android:layout_marginLeft="@dimen/sides_margin"
                    android:layout_marginRight="@dimen/sides_margin"
                    android:orientation="horizontal">
                    <RatingBar
                        android:id="@+id/tv_details_ratingBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:max="10"
                        app:setRanting="@{details.voteAverage}"
                        android:layout_gravity="center_vertical"
                        style="@style/Widget.AppCompat.RatingBar.Small"/>
                    <TextView
                        android:id="@+id/tv_details_reating_point"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        app:doubleToString="@{details.voteAverage}"
                        tools:text="6.2"
                        android:textStyle="bold"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"/>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/detail_overview"
                    android:layout_marginTop="@dimen/detail_feild_distanse"
                    android:textStyle="bold"
                    android:layout_marginLeft="@dimen/sides_margin"
                    android:layout_marginRight="@dimen/sides_margin"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"/>
                <TextView
                    android:id="@+id/tv_details_overview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@{details.overview}"
                    android:layout_marginLeft="@dimen/sides_margin"
                    android:layout_marginRight="@dimen/sides_margin"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                    tools:text="@string/toy_story_lorem"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tv_details"
                    android:layout_marginTop="@dimen/sides_margin"
                    android:layout_marginBottom="@dimen/sides_margin"
                    android:textStyle="bold"
                    android:layout_marginLeft="@dimen/sides_margin"
                    android:layout_marginRight="@dimen/sides_margin"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/sides_margin"
                    android:layout_marginRight="@dimen/sides_margin"
                    android:layout_marginLeft="@dimen/sides_margin"
                    android:background="@drawable/tv_detail_bg">

                    <TextView
                        android:id="@+id/tv_details_last_air_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tv_last_air_date"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"/>
                    <TextView
                        android:id="@+id/tv_details_last_air_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="2020-03-01"
                        android:text="@{details.lastAirDate}"
                        android:layout_alignParentRight="true"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"/>
                    <TextView
                        android:id="@+id/tv_details_sesons_title"
                        android:layout_below="@id/tv_details_last_air_title"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_height="wrap_content"
                        android:text="@string/tv_seasons_number"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"/>
                    <TextView
                        android:id="@+id/tv_details_sesons_number"
                        android:layout_below="@id/tv_details_last_air_date"
                        android:layout_width="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="8dp"
                        android:layout_height="wrap_content"
                        tools:text="10"
                        android:text="@{String.valueOf(details.numberOfSeasons)}"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"/>
                    <TextView
                        android:id="@+id/tv_details_episode_number_title"
                        android:layout_below="@id/tv_details_sesons_title"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_height="wrap_content"
                        android:text="@string/tv_number_od_episodes"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"/>
                    <TextView
                        android:id="@+id/tv_details_number_episode"
                        android:layout_below="@id/tv_details_sesons_number"
                        android:layout_width="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="8dp"
                        android:layout_height="wrap_content"
                        tools:text="147"
                        android:text="@{String.valueOf(details.numberOfEpisodes)}"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"/>
                </RelativeLayout>
                <Button
                    android:id="@+id/tv_details_sesons_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:backgroundTint="@color/colorAccent"
                    android:layout_marginRight="@dimen/sides_margin"
                    android:text="@string/tv_see_more"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/detail_top_billed_cast"
                    android:textStyle="bold"
                    android:layout_marginLeft="@dimen/sides_margin"
                    android:layout_marginRight="@dimen/sides_margin"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/tv_details_top_cast_list"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/head_card_height"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>


        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/tv_details_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_anchor="@id/tv_details_appbarr"
            app:layout_anchorGravity="bottom|right"
            android:layout_marginRight="@dimen/sides_margin"
            android:layout_marginLeft="@dimen/sides_margin"
            app:backgroundTint="@color/video_button_red"
            app:srcCompat="@drawable/ic_play_arrow_black_24dp"/>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>